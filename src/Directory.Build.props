<Project>

  <PropertyGroup>
    <LangVersion>preview</LangVersion>
    <Features>strict</Features>
  </PropertyGroup>

  <Target Name="ResolveAnalyzerProjectReferences"
          BeforeTargets="ResolveReferences">
    <MSBuild Projects="@(AnalyzerProjectReference)"
             Targets="Build">
      <Output TaskParameter="TargetOutputs"
              ItemName="Analyzer" />
     </MSBuild>
  </Target>

</Project>
